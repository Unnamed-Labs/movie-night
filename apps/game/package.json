{
  "name": "@movie/game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "lint": "cross-env dotenv -v SKIP_ENV_VALIDATION=true next lint",
    "lint:fix": "pnpm lint --fix",
    "start": "pnpm with-env next start",
    "e2e": "cross-env SKIP_ENV_VALIDATION=true start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "cross-env SKIP_ENV_VALIDATION=true start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "test": "pnpm lint && pnpm e2e:headless",
    "check-types": "tsc --noEmit",
    "with-env": "cross-env dotenv -e ../../.env --"
  },
  "dependencies": {
    "@movie/db": "0.1.0",
    "@movie/ui": "0.1.0",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@tanstack/react-query": "^4.28.0",
    "@trpc/client": "^10.18.0",
    "@trpc/next": "^10.18.0",
    "@trpc/react-query": "^10.18.0",
    "@trpc/server": "^10.18.0",
    "next": "^13.2.4",
    "next-auth": "4.20.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "1.12.2",
    "zod": "^3.21.4",
    "zustand": "^4.3.7"
  },
  "devDependencies": {
    "@movie/tailwind-config": "0.1.0",
    "@movie/tsconfig": "0.1.0",
    "@types/node": "^18.15.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "cypress": "^12.12.0",
    "dotenv-cli": "^7.2.1",
    "postcss": "^8.4.24",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.0"
  }
}
